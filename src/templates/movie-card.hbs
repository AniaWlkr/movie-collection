<li class="movie-item" id={{id}} data-sourse={{id}}>
  <img src="{{poster_path}}" alt="{{original_title}}" class="movie-img" id={{id}}>
  <div class="movie-wrapper">
    <h3 class="movie-title">{{original_title}}</h3>
    <p class="movie-info"><span class="movie-genres">{{genres}}</span> | <span class="movie-date">{{release_date}}</p>
  </div>
</li>